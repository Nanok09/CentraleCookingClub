<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        card_view:cardElevation="15dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardBackgroundColor="#fec5d9">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:fontFamily="casual"
            android:id="@+id/titreItem"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginEnd="180dp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/imageRecipe"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:fontFamily="casual"
            android:id="@+id/time"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/imageRecipe"
            app:layout_constraintStart_toEndOf="@id/ic_time" />

        <TextView
            android:fontFamily="casual"
            android:id="@+id/nombrePersonnes"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/imageRecipe"
            app:layout_constraintStart_toEndOf="@id/ic_nb_personnes" />

        <ImageView
            android:id="@+id/imageRecipe"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/crepes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titreItem" />

        <ImageView
            android:id="@+id/ic_time"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_time_24"
            app:layout_constraintBottom_toTopOf="@+id/imageRecipe"
            app:layout_constraintStart_toEndOf="@id/titreItem" />

        <ImageView
            android:id="@+id/ic_nb_personnes"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_baseline_group_24"
            app:layout_constraintBottom_toTopOf="@+id/imageRecipe"
            app:layout_constraintStart_toEndOf="@id/time" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>